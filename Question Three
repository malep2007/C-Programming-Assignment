  #include <stdio.h  // The while statement.
  #include <stdlib.h>


int main () 
	{
		/* Declaring an a variable y of integer type ************************
		*********************************************************************/
		int y;
		while ( y <= 100)    // The test condition the loop runs as long as y is less of equal to 100
		{
			printf("\n %d", y);  // as long  as the loop runs the value of y is printed
			y+;      // y increment by 1
		} 
		return 0;
	}

