void addarrays (int n, int a[], int b[], int c[])// function definition that takes on 4 arguments
{
    int i;
    for (i=0;i<n;i++)
    {
        c[i]=a[i]+b[i];
    }
}



#include <stdio.h>
#include <stdlib.h>
int j, n;

void add_arrays(int n, int x[], int y[], int z[])
    {	    int i;
		for (i=0; i<n; i++)
		{
		    z[i] = x[i] + y[i];
		    printf("%d\n",z[i]);
        }
    }
		;


int *addarrays(int n, int x[], int y[], int z[]) // modified function to return an array
    {	    int i;
		for (i=0; i<n; i++)
		{ z[i] = x[i] + y[i];
					}
		return z;
	}

