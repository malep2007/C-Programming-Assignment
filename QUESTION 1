#include <stdio.h>
#include <stdlib.h>

int x=1;// statements are terminated by semi colon not a full colon
main()
{
    if (x==1) /*relational signs "==" was supposed to be used instead of assignment sign
    and if statement are not supposed to be terminated*/
        {
        printf(" x equals 1 ");
    }
      else /*if goes hand in hand with else not otherwise*/
      {
        printf(" x does not equal 1 ");
      }

    return 0;
}
