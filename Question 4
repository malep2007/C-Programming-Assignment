{
   int A[5],B[5],C[5],i;
   printf("Enter the array A:\n");
   for(i=0;i<5;i++)
   {
    scanf("%d",&A[i]);
   }

   printf("Enter the array B:\n");
   for(i=0;i<5;i++)
   {
    scanf("%d",&B[i]);
   }
   addarrays(A,B,5);

    return 0;
}
void addarrays(int A[],int B[],int size)
{
    int i,C[size];
    for(i=0;i<5;i++)
    {
        C[i]=A[i]+B[i];
    }
    for(i=0;i<5;i++)
    {
     printf("%d ",C[i]);

    }
    return 0;
    
